<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_single="true" android:drawable="@drawable/settingslib_round_background" />
    <item android:state_first="true" android:drawable="@drawable/settingslib_round_background_top" />
    <item android:state_middle="true" android:drawable="@drawable/settingslib_round_background_center" />
    <item android:state_last="true" android:drawable="@drawable/settingslib_round_background_bottom" />
    <!-- If the preference layout is used without the expressive preference adapter or expressive
         design being enabled, no state will be set, and we need a default drawable background for
         this case. Due to b/36941443, we were not able to set the theme attribute
         ?android:attr/selectableItemBackground as the default (no state) background. Hence, just
         directly inline it as a drawable here. -->
    <item>
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <color android:color="@android:color/white" />
            </item>
        </ripple>
    </item>
</selector>
