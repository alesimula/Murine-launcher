    <color name="settingslib_materialColorSurfaceBright">@android:color/system_neutral1_10</color>
    <color name="settingslib_materialColorSurfaceDim">@android:color/system_neutral1_100</color>

    <!-- Surface containers for elevation and depth -->
    <color name="settingslib_materialColorSurfaceContainer">@android:color/system_neutral1_50</color>
    <color name="settingslib_materialColorSurfaceContainerLowest">@android:color/system_neutral1_0</color>
    <color name="settingslib_materialColorSurfaceContainerLow">@android:color/system_neutral1_50</color>
    <color name="settingslib_materialColorSurfaceContainerHigh">@android:color/system_neutral1_100</color>
    <color name="settingslib_materialColorSurfaceContainerHighest">@android:color/system_neutral2_100</color>

    <color name="settingslib_track_online_color">@color/settingslib_switch_track_outline_color</color>
